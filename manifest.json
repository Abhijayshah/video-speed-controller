{
  "name": "Video Speed Controller",
  "short_name": "videospeed",
  "version": "0.9.0",
  "manifest_version": 3,
  "minimum_chrome_version": "89",
  "description": "Speed up, slow down, advance and rewind HTML5 audio/video with shortcuts",
  "homepage_url": "https://github.com/igrigorik/videospeed",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "match_about_blank": true,
      "exclude_matches": [
        "https://hangouts.google.com/*",
        "https://meet.google.com/*"
      ],
      "css": [
        "inject.css"
      ],
      "js": [
        "src/content/injector.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.css",
        "shadow.css",
        "scriptforsite/*.js",
        "src/module-loader.js",
        "src/core/*.js",
        "src/utils/*.js",
        "src/ui/*.js",
        "src/observers/*.js",
        "src/site-handlers/*.js",
        "src/content/*.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ]
    }
  ]
}